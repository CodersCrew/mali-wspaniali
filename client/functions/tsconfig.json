{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es6"
        ],
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "skipLibCheck": true,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}